# Code for Plotting Figure 1-4
import matplotlib.pyplot as plt
import numpy as np

# Creating data for the deterministic model
hours_studied = np.linspace(0, 10, 100)
test_score_deterministic = 5 * hours_studied + 50  # Simple linear relationship

# Creating data for the probabilistic model
np.random.seed(0)  # For reproducibility
test_score_probabilistic = 5 * hours_studied + 50 + np.random.normal(0, 10, 100)  # Adding some random noise

# Plotting the deterministic model
plt.figure(figsize=(12, 6))
plt.subplot(1, 2, 1)
plt.plot(hours_studied, test_score_deterministic, color='blue')
plt.title('Deterministic Model')
plt.xlabel('Hours Studied')
plt.ylabel('Test Score')
plt.grid(True)

# Plotting the probabilistic model
plt.subplot(1, 2, 2)
plt.scatter(hours_studied, test_score_probabilistic, color='red')
plt.title('Probabilistic Model')
plt.xlabel('Hours Studied')
plt.ylabel('Test Score')
plt.grid(True)

plt.tight_layout()
plt.show()
